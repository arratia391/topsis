extends ./layout.jade
block contenido
	body(class="bgd")
		div(class="col-md-5 center-block no-float top-space text-left divAgregarExperto arvo divbox")
			h3 Editar Experto
			form(method="POST" action="/menu/#{datos.id}?_method=put" style="margin-top:1.5em;" enctype="multipart/form-data")
				div(class="form-group")
					label Nombre Completo
					input(type="text" name="nombreCompleto" value="#{datos.nombreCompleto}" placeholder="Nombre del Experto" class="form-control")
				div(class="form-group")
					label Usuario
					input(type="text" title="Se debe completar este campo" value="#{datos.usuario}"  name="nuevoUsuario" placeholder="Nombre de Usuario" class="form-control" requiered )
				div(class="form-group")
					label Fecha de Nacimiento
					input(type="date" name="fechaDeNacimiento" value="#{datos.fechaNacimiento}"  placeholder="Fecha de nacimiento" class="form-control")
				div(class="form-group")
					label Ocupación
					input(type="text" name="ocupacion" value="#{datos.ocupacion}"  placeholder="Ocupación del Experto" class="form-control")
				div(class="form-group")
					label Correo Electrónico
					input(type="email" name="correoElectronico" value="#{datos.email}"  placeholder="Correo electrónico del Experto" class="form-control")
				div(class="form-group")
					label Contraseña
					input(type="password" title="Se debe completar este campo" name="nuevaContraseña" value="#{datos.contraseña}"  placeholder="Contraseña" class="form-control" requiered)
				div(class="form-group text-right")
					input(type="submit" class="btn btn-info" value="Guardar")
